extends layout

block content
    .container(style="padding:50px;")
        div
            a.btn.btn-success(href="/crear")
                span.glyphicon.glyphicon-plus &nbsp Crear nuevo registro
        .table-responsive
            table.table
                thead
                    tr
                        th ID
                        th Nombre
                        th Descripci√≥n
                        th Precio
                        th(colspan="3")
                            .text-center Acciones
                        
                tbody
                    for item in data
                        tr
                            td= item._id
                            td= item.nombre
                            td= item.descripcion
                            td= item.precio
                            td
                                a.btn.btn-default(href="/ver?_id="+item._id)
                                    span.glyphicon.glyphicon-search    
                            td
                                a.btn.btn-primary(href="/editar?_id="+item._id)
                                    span.glyphicon.glyphicon-pencil
                            td  
                                a.btn.btn-danger(href="/producto/delete?_id="+item._id, onclick="return confirm('Estas seguro de borrar?')")
                                    span.glyphicon.glyphicon-trash


       

    