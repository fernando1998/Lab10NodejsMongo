extends layout

block content
    .container
        .main.container
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2(align="center") EDITAR PRODUCTO
                form(action="/producto/update", method="post")
                    input(type="hidden",name="_id", value=data._id)
                    .form-group
                        label(for="nombre") Nombre:
                        input#nombre.form-control(type="text", name="nombre", value=data.nombre)
                    .form-group
                        label(for="descripcion") Descripci√≥n:
                        input#descripcion.form-control(type="text",name="descripcion",value=data.descripcion)
                    .form-group 
                        label(for="precio") Precio:
                        input#precio.form-control(type="text",name="precio", value=data.precio)
                    .text-center
                        button.btn.btn-success.m-5(type="submit") Actualizar
                        a.btn.btn-danger(href="/producto", style="margin-left:10px;") Cancelar